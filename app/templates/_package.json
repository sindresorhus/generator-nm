{
	"name": "<%= moduleName %>",
	"version": "0.0.0",
	"description": "<%= moduleDescription %>",
	"license": "MIT",
	"repository": "<%= githubUsername %>/<%= repoName %>",
	"author": {
		"name": "<%= name %>",
		"email": "<%= email %>",
		"url": "<%= website %>"
	},
	"type": "module",<% if (cli) { %>
	"bin": "cli.js",<% } else { %>"exports": "./index.js",<% } %>
	"engines": {
		"node": ">=14.16"
	},
	"scripts": {
		"test": "xo && <% if (nyc) { %>nyc <% } %>ava"
	},
	"files": [
		"index.js"<% if (cli) { %>,
		"cli.js"<% } %>
	],
	"keywords": [<% if (cli) { %>
		"cli-app",
		"cli",<% } %>
		""
	],
	"dependencies": {<% if (cli) { %>
		"meow": "^10.1.3"
	<% } %>},
	"devDependencies": {
		"ava": "^4.3.1",<% if (codecov) { %>
		"codecov": "^3.8.3",<% } %><% if (nyc) { %>
		"nyc": "^15.1.0",<% } %>
		"xo": "^0.51.0"
	}<% if (codecov) { %>,
	"nyc": {
		"reporter": [
			"text",
			"lcov"
		]
	}<% } %>
}
